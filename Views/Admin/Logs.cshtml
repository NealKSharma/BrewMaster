@model BrewMaster.Models.LogViewModel

@{
    ViewData["Title"] = "Log Management";
}

<div class="logs-container">
    <!-- Left Form Panel -->
    <div class="logs-management">
        <h2>Log Manager</h2>
        <form asp-action="Logs" method="get" class="form-body" id="logForm">
            <div class="form-group">
                <label asp-for="SelectedLogType" class="form-label">Log Type</label>
                <select asp-for="SelectedLogType" name="logType" class="form-select" size="4" id="logTypeSelect" onchange="submitLogTypeChange()">
                    <option value="ErrorLog">Error Log</option>
                    <option value="LoginAudit">Login Audit</option>
                    <option value="ProductLog">Product Log</option>
                    <option value="UserLog">User Log</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="SearchLogId" class="form-label">Log ID</label>
                <input asp-for="SearchLogId" name="searchLogId" class="form-input" placeholder="Enter Log ID" />
                <span asp-validation-for="SearchLogId" class="validation-error"></span>
            </div>

            @if (TempData["LogError"] != null)
            {
                <div style="color: #FF6B6B; background-color: rgba(255, 107, 107, 0.1); border: 1px solid #FF6B6B; border-radius: 8px; padding: 0.75rem 1rem; margin-bottom: 1rem; text-align: center; font-weight: 500;">
                    @TempData["LogError"]
                </div>
            }

            @if (TempData["LogSuccess"] != null)
            {
                <div style="color: #32CD32; background-color: rgba(50, 205, 50, 0.1); border: 1px solid #32CD32; border-radius: 8px; padding: 0.75rem 1rem; margin-bottom: 1rem; text-align: center; font-weight: 500;">
                    @TempData["LogSuccess"]
                </div>
            }

            <div class="button-group">
                <button type="submit" class="btn-form btn-primary">Search</button>
                <button type="submit" formaction="@Url.Action("ShowAll")" formmethod="post" class="btn-form btn-primary">Show All</button>
                <button type="submit" formaction="@Url.Action("DeleteLog")" formmethod="post" class="btn-form btn-danger"
                        onclick="return confirm('Are you sure you want to delete this log?');">
                    Delete
                </button>
                <button type="submit" formaction="@Url.Action("DeleteAllLogs")" formmethod="post" class="btn-form btn-warning"
                        onclick="return confirm('This will delete ALL logs. Are you sure?');">
                    Delete All
                </button>
            </div>
        </form>
    </div>

    <!-- Right Grid -->
    <div class="logs-display">
        <h2>Logs List</h2>
        @if (Model.LogsTable != null && Model.LogsTable.Rows.Count > 0)
        {
            <table class="logs-table">
                <thead>
                    <tr>
                        @foreach (System.Data.DataColumn col in Model.LogsTable.Columns)
                        {
                            <th>@col.ColumnName</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (System.Data.DataRow row in Model.LogsTable.Rows)
                    {
                        <tr>
                            @foreach (var item in row.ItemArray)
                            {
                                <td>@item?.ToString()</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div style="display: flex; justify-content: center; align-items: center; height: 70%;">
                <p style="text-align: center; font-size: 1.2rem; color: #F5DEB3;">
                    No logs found.
                </p>
            </div>
        }
    </div>
</div>

<style>
    .container {
        max-width: 1600px;
        margin: .5rem auto;
        padding: 0 20px;
        color: #F5DEB3;
    }

    .logs-container {
        display: grid;
        grid-template-columns: minmax(280px, 1fr) 5fr;
        gap: 1rem;
        min-height: 700px;
        margin-bottom: 1rem;
    }

    .logs-management {
        background: rgba(255, 255, 255, 0.04);
        border-radius: 20px;
        padding: 0.4rem;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(245, 222, 179, 0.1);
        animation: slideUp 0.3s ease-out;
        position: sticky;
    }

        .logs-management h2, .logs-display h2 {
            color: #F5DEB3;
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: .5rem;
            text-align: center;
            text-shadow: 1px 1px 3px rgba(0,0,0,0.3);
            border-bottom: 2px solid #8B4513;
        }

    .logs-display {
        background: rgba(255, 255, 255, 0.04);
        padding: .4rem;
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(245, 222, 179, 0.1);
        animation: slideUp 0.3s ease-out;
        min-height: 500px;
    }

    .form-body {
        padding: .5rem .5rem;
    }

    .form-label {
        font-size: 0.8rem;
    }

    .form-input,
    .form-select {
        padding: 0.5rem 1rem;
        font-size: 0.8rem;
    }

    .button-group {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .btn-form {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        text-decoration: none;
        gap: 0.5rem;
        min-width: 80px;
    }

    .logs-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
        background: rgba(255, 255, 255, 0.02);
        border-radius: 12px;
        overflow: hidden;
        font-size: 14px;
    }

        .logs-table th,
        .logs-table td {
            padding: 0.75rem;
            text-align: center;
            border-bottom: 1px solid rgba(245, 222, 179, 0.1);
            color: #F5DEB3;
        }

        .logs-table th {
            background: linear-gradient(135deg, #8B4513 0%, #5D2F0F 100%);
            font-weight: 600;
            font-size: 0.875rem;
            letter-spacing: 0.5px;
        }

        .logs-table tr:hover {
            background: rgba(139, 69, 19, 0.1);
        }

    .form-select {
        overflow-y: hidden;
    }

    .label-inline {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .label-inline .form-label {
            margin-bottom: 0;
        }

        .label-inline .form-text {
            font-size: 0.8rem;
            color: #C0A672;
            margin-top: 0;
        }
</style>

<script>
    function submitLogTypeChange() {
        document.querySelector('input[name="searchLogId"]').value = '';
        document.getElementById('logForm').submit();
    }
</script>