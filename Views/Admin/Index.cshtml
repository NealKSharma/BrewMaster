@model BrewMaster.Models.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    .dashboard-body {
        margin: 2rem auto;
        animation: slideUp 0.6s ease-out;
        overflow: hidden;
        text-align: center;
        max-width: 1400px
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .stat-card {
        background: rgba(255, 255, 255, 0.04);
        border: 4px solid #5D2F0F;
        border-radius: 16px;
        padding: 1rem;
        text-align: center;
        color: #F5DEB3;
        font-weight: 600;
    }

    .stat-number {
        font-size: 2rem;
        margin-top: 0.25rem;
    }

    .section-box {
        background: rgba(255, 255, 255, 0.04);
        border: 4px solid #5D2F0F;
        border-radius: 16px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .section-title {
        font-size: 1.5rem;
        color: #F5DEB3;
        border-bottom: 1px solid #8B4513;
        padding-bottom: 0.25rem;
        margin-bottom: 1rem;
    }

    .simple-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 0.5rem;
        color: #F5DEB3;
    }

        .simple-table th,
        .simple-table td {
            padding: 0.75rem;
            border-bottom: 1px solid rgba(245, 222, 179, 0.2);
        }

        .simple-table th {
            background-color: #5D2F0F;
            color: #F5DEB3;
        }
</style>

<div class="dashboard-body">
    @if (TempData["DashboardError"] != null)
    {
        <div class="validation-error-summary">
            @TempData["DashboardError"]
        </div>
    }

    <!-- Stats -->
    <div class="stats-grid">
        <div class="stat-card">
            <div>Total Users</div>
            <div class="stat-number">@Model.TotalUsers</div>
        </div>
        <div class="stat-card">
            <div>Total Products</div>
            <div class="stat-number">@Model.TotalProducts</div>
        </div>
        <div class="stat-card">
            <div>Total Orders</div>
            <div class="stat-number">@Model.TotalOrders</div>
        </div>
        <div class="stat-card">
            <div>Pending Orders</div>
            <div class="stat-number">@Model.PendingOrdersCount</div>
        </div>
        <div class="stat-card">
            <div>Total Revenue</div>
            <div class="stat-number">₹@Model.TotalRevenue.ToString("N0")</div>
        </div>
    </div>

    <!-- Low Stock -->
    <div class="section-box">
        <h2 class="section-title">Low Stock Products</h2>
        @if (Model.LowStockProducts.Rows.Count > 0)
        {
            <table class="simple-table">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Stock</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (System.Data.DataRow row in Model.LowStockProducts.Rows)
                    {
                        <tr>
                            <td>@row["ProductName"]</td>
                            <td>@row["Stock"]</td>
                            <td>₹@Convert.ToDecimal(row["Price"]).ToString("N2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div>All products have enough stock.</div>
        }
    </div>

    <!-- Out of Stock -->
    <div class="section-box">
        <h2 class="section-title">Out of Stock Products</h2>
        @if (Model.OutOfStockProducts.Rows.Count > 0)
        {
            <table class="simple-table">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (System.Data.DataRow row in Model.OutOfStockProducts.Rows)
                    {
                        <tr>
                            <td>@row["ProductName"]</td>
                            <td>₹@Convert.ToDecimal(row["Price"]).ToString("N2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div>No out-of-stock products!</div>
        }
    </div>

    <!-- Recent Orders -->
    <div class="section-box">
        <h2 class="section-title">Recent Orders</h2>
        @if (Model.RecentOrders.Rows.Count > 0)
        {
            <table class="simple-table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Total</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (System.Data.DataRow row in Model.RecentOrders.Rows)
                    {
                        <tr>
                            <td>#@row["OrderId"]</td>
                            <td>@row["UserName"]</td>
                            <td>₹@Convert.ToDecimal(row["OrderTotal"]).ToString("N0")</td>
                            <td>@row["OrderStatus"]</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div>No recent orders found.</div>
        }
    </div>

    <!-- Recent Users -->
    <div class="section-box">
        <h2 class="section-title">Recent Users</h2>
        @if (Model.RecentUsers.Rows.Count > 0)
        {
            <table class="simple-table">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Joined</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (System.Data.DataRow row in Model.RecentUsers.Rows)
                    {
                        <tr>
                            <td>@row["UserName"]</td>
                            <td>@row["Email"]</td>
                            <td>@Convert.ToDateTime(row["EntryDate"]).ToString("dd/MM/yy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div>No recent users found.</div>
        }
    </div>
</div>